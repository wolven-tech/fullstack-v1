{
  "name": "@v1/api",
  "version": "1.0.0",
  "private": true,
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "clean": "rm -rf .turbo node_modules",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "db:start": "supabase start",
    "db:login": "supabase login",
    "db:migrate": "supabase migration up",
    "db:seed": "supabase db seed generate && supabase db seed run",
    "db:reset": "supabase db reset",
    "db:generate": "supabase gen types --lang=typescript --local --schema public > ../../packages/supabase/src/types/db.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/swagger": "^1.3.1",
    "@sinclair/typebox": "^0.34.41",
    "elysia": "^1.4.16",
    "supabase": "^1.191.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
